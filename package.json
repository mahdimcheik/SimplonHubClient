{
  "name": "SimplonHub",
  "version": "20.0.0",
  "scripts": {
    "ng": "ng serve --ssl true --ssl-key key.pem --ssl-cert cert.pem --port 4201",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:test": "ng build --configuration testing",
    "watch": "ng build --watch --configuration development",
    "format": "prettier --write \"**/*.{js,mjs,ts,mts,d.ts,html}\" --cache",
    "test": "ng test",
    "gen-api": "ng-openapi -i http://localhost:5113/swagger/v1/swagger.json -o ./src/api",
    "doc": "compodoc -p tsconfig.json -d docs --language fr",
    "cap:copy": "npx cap copy",
    "cap:sync": "npx cap sync",
    "cap:build": "npm run build:prod && npx cap copy",
    "cap:build:android": "npm run build:prod && npx cap copy && npx cap open android",
    "cap:run:android": "npx cap run android",
    "cap:add:android": "npx cap add android",
    "cap:assets": "npx capacitor-assets generate --iconBackgroundColor '#ffffff' --iconBackgroundColorDark '#000000' --splashBackgroundColor '#ffffff' --splashBackgroundColorDark '#000000'"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.2",
    "@angular/cdk": "^20.2.11",
    "@angular/common": "^20.3.2",
    "@angular/compiler": "^20.3.2",
    "@angular/core": "^20.3.2",
    "@angular/forms": "^20.3.2",
    "@angular/platform-browser": "^20.3.2",
    "@angular/platform-browser-dynamic": "^20.3.2",
    "@angular/router": "^20.3.2",
    "@fullcalendar/angular": "^6.1.19",
    "@fullcalendar/core": "^6.1.19",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/list": "^6.1.15",
    "@fullcalendar/timegrid": "^6.1.15",
    "@primeng/themes": "^20.2.0",
    "@primeuix/themes": "^1.2.5",
    "@types/luxon": "^3.7.1",
    "chart.js": "4.4.2",
    "luxon": "^3.7.2",
    "primeicons": "^7.0.0",
    "primeng": "^20.2.0",
    "rxjs": "~7.8.0",
    "tailwindcss-primeui": "^0.3.2",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.3",
    "@angular/cli": "^20.3.3",
    "@angular/compiler-cli": "^20.3.2",
    "@openapitools/openapi-generator-cli": "^2.24.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.20",
    "cypress": "^15.2.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-openapi": "^0.2.2",
    "ng-openapi-gen": "^1.0.3",
    "postcss": "^8.4.49",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.2"
  }
